<mvc:View
    controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <HBox
            class="sapUiSmallMargin"
        > 
            <HBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label
                        labelFor="idLabel1"
                        text="{i18n>MaterialDescription}"
                    />
                    <Input
                        id="idLabel1"
                        value="{LocalDataModel>/valueInput}"
                    />
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label
                        labelFor="comboboxID"
                        text="{i18n>Category}"
                    />
                    <ComboBox
                        id="comboboxID"
                        selectionChange=".onSelectionChange"
                        selectedKey="{LocalDataModel>/selectedKey}"
                        items="{
					path: '/Categories',
					sorter: { path: 'CategoryName' }
				}"
                    >
                        <c:Item
                            key="{CategoryID}"
                            text="{CategoryID} - {CategoryName}"
                        />
                    </ComboBox>
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label
                        labelFor="comboboxID"
                        text="{i18n>Categories}"
                    />
                    <MultiComboBox
                        selectionChange="handleSelectionChange"
                        selectionFinish="handleSelectionFinish"
                        selectedKeys="{LocalDataModel>/selectedKeyMulti}"
                        items="{
                                path: '/Categories',
                                sorter: { path: 'CategoryName' }
                               }"
                    >
                        <c:Item
                            key="{CategoryID}"
                            text="{CategoryID} - {CategoryName}"
                        />
                    </MultiComboBox>
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label
                        labelFor="comboboxID"
                        text="{i18n>Suppliers}"
                    />
                    <MultiInput
                        id="multiInput4"
                        showValueHelp="false"
                        selectedKey="{LocalDataModel>/selectedItem}"
                        tokenUpdate=".onSupplierTokenUpdate"
                        suggestionItems="{
                                        path: '/Suppliers',
                                        sorter: { path: 'CompanyName' }
                                    }"
                    >
                        <c:Item
                            key="{SupplierID}"
                            text="{SupplierID} - {CompanyName}"
                        />
                    </MultiInput>
                </VBox>
            </HBox>
                <Button
                    id="btnBuscar"
                    text="{i18n>textBuscar}"
                    press="onPress"
                    class="sapUiSmallMarginTop"
                />            
        </HBox>

        <VBox
            id="vbId02"
            class="sapUiSmallMargin"
        >
            <c:Fragment
                fragmentName="project1.view.fragments.ProductsTable"
                type="XML"
            />
        </VBox>
    </Page>
</mvc:View>
